citHeader("To cite {R} package 'blmr' in publications please use:")


year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)


bibentry(
  bibtype = "Manual",
  title = "blmr: Broken Line Model Regression",
  author = c( 
    person("Marc", "Adams", role= c("aut", "cre"), email= "blmrpkg@gmail.com")
  ),
  year = year,
  note = vers,
  url = "http://CRAN.R-project.org/package=blmr",
  key = "blmr-package"
)

